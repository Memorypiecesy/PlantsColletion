<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="BotanyRes"
            type="com.example.plantscolllection.bean.BotanyRes" />
    </data>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="336dp">

            <!--植物中文名-->
            <TextView
                android:id="@+id/chinese_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@{BotanyRes.name}"
                tools:text="南美蟛蜞菊"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <!--植物拉丁名-->
            <TextView
                android:id="@+id/latin_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chinese_name_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="@{BotanyRes.latinName}"
                tools:text="Sphagneticola calendulacea "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--    识别图片外面的圆圈-->
            <ImageView
                android:layout_width="246dp"
                android:layout_height="246dp"
                android:layout_below="@+id/latin_name_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:src="@drawable/bottom_dialog_circle" />

            <!--    植物图片的RelativeLayout-->
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/latin_name_text"
                android:layout_marginTop="27dp"
                android:layout_width="235dp"
                android:layout_height="235dp">



                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:scaleType="fitXY"
                    android:id="@+id/picture"
                    android:layout_width="246dp"
                    android:layout_height="246dp"
                    android:src="@drawable/ic_launcher_background"
                    app:roundPercent="1" />

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="193dp"
                    android:layout_height="46dp"
                    android:src="@drawable/bottom_dialog_dim_background" />


                <!--        "相似度"文字TextView-->
                <TextView
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="66dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/similarity"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <!--        "相似度"数值TextView-->
                <TextView
                    android:id="@+id/similarity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="66dp"
                    android:layout_marginBottom="15dp"
                    android:text="@{BotanyRes.score}"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    tools:text="99%" />


            </RelativeLayout>

            <!--    左箭头-->
            <ImageView
                android:id="@+id/left_arrow_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="189dp"
                android:src="@drawable/camera_page_left_arrow" />

            <!--    右箭头-->
            <ImageView
                android:id="@+id/right_arrow_image"
                android:layout_alignParentEnd="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="189dp"
                android:src="@drawable/camera_page_right_arrow" />

        </RelativeLayout>

</layout>