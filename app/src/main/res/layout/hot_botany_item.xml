<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="HotBotany"
            type="com.example.plantscolllection.bean.HotBotany" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!--        序号-->
            <TextView
                android:id="@+id/sequence_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                tools:text="1、"
                android:textColor="@color/RGB_51_51_51"
                android:textSize="16sp" />
            <!--        热门搜索植物名字-->
            <TextView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/sequence_text"
                android:id="@+id/hot_botany_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:text="@{HotBotany.name}"
                tools:text="加拿大一枝黄花"
                android:textColor="@color/RGB_51_51_51"
                android:textSize="16sp" />
            <!--        搜索量-->
            <TextView
                android:text="@{String.valueOf(HotBotany.searchCount)}"
                android:id="@+id/search_count_text"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_centerVertical="true"
                tools:text="10086"
                android:textColor="@color/RGB_204_204_204"
                android:textSize="16sp" />


        </RelativeLayout>

    </RelativeLayout>
</layout>