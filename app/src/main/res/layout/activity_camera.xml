<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CameraActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.example.plantscolllection.utils.GridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                    <com.example.plantscolllection.utils.CropImageView
                        android:scaleType="fitXY"
                        android:id="@+id/crop_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white">

                <!--        拍摄图片按钮-->
                <ImageView
                    android:id="@+id/take_photo_image"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/take_photo_button" />

                <!--        返回按钮-->
                <ImageView
                    android:id="@+id/back_image"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="64dp"
                    android:src="@drawable/camera_page_back" />

                <!--        相册按钮-->
                <ImageView
                    android:id="@+id/album_image"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="64dp"
                    android:layout_marginEnd="33dp"
                    android:src="@drawable/camera_page_album_button" />

                <!--        确认裁剪按钮-->
                <ImageView
                    android:id="@+id/confirm_crop_image"
                    android:layout_width="73dp"
                    android:layout_height="73dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/confirm_crop_image"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>