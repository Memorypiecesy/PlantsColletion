<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="254dp"
    android:layout_height="160dp"
    android:background="@drawable/delete_note_relative_round_corner">

    <RelativeLayout
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_width="93dp"
        android:layout_height="25dp">

    <!--    警告icon-->
    <ImageView
        android:id="@+id/warn_image"
        android:layout_centerVertical="true"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/delete_note_warn" />

    <!--    "操作提示"TextView-->
    <TextView
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/warn_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="操作提示"
        android:textColor="@color/black"
        android:textSize="17sp" />

    </RelativeLayout>

    <!--    警告的内容TextView-->
    <TextView
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="笔记删除后不可撤回，是否确定删除笔记？"
        android:textColor="#4D4D4D"
        android:textSize="16sp" />

    <!--    分割线-->
    <View
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_marginTop="112dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <!--    我再想想TextView-->
        <TextView
            android:id="@+id/think_again_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我再想想"
            android:textColor="#A6A6A6"
            android:textSize="16sp" />

        <!--    确认TextView-->
        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="#4D4D4D"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>