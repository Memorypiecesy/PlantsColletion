            <!--    花的图片-->
            <ImageView
                android:id="@+id/picture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/flower_sample" />
            <!--        植物的中文名-->
            <TextView
                android:id="@+id/plants_chinese_name"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="114dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="南非蟛蜞花"
                android:textColor="@color/black"
                android:textSize="17sp"
                tool:text="茉莉花" />

            <!--        植物的英文名-->
            <TextView
                android:id="@+id/plants_latin_name"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plants_chinese_name"
                android:layout_marginStart="114dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Sphagneticola calendulacea "
                android:textColor="@color/black"
                android:textSize="12sp" />

            <!--    植物"门"类的CardView-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="111dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/RGB_0_209_181_10_percent"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--    "植物的门类"TextView-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        android:text="被子植物门"
                        android:textColor="@color/RGB_0_209_181_100_percent"
                        android:textSize="12sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <!--    植物"科"类的CardView-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="12dp"
                android:layout_toEndOf="@+id/category"
                android:backgroundTint="#1AFF9F40"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--    "植物的科类"TextView-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="1dp"
                        android:text="菊科"
                        android:textColor="@color/RGB_255_159_64_100_percent"
                        android:textSize="12sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

